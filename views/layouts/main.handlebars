{{!-- Jquery for page to functionon click  --}}
<script>
    $(function () {
        $("#createBurger").on("submit", function (event) {
            event.preventDefault();

            var newBurger = {
                burger_name: $("burgerName").val().trim()
            };
            $.ajax("/api/burgers", {
                type: "POST",
                data: newBurger
            }).then(function () {
                console.log("New burger added!")

                location.reload();
            });
        });
        $("#devourBurger").on("click", function (event) {
            var id = $(this).data("id")
            var changeStatus = {
                devoured: 0
            };
            $.ajax("/api/burgers/" + id, {
                type: "PUT",
                data: changeStatus
            }).then(function () {
                console.log("Burger updated!")

                location.reload();
            });
        });
    });


</script>

